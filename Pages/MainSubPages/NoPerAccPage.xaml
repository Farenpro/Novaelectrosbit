<Page x:Class="Novaelectrosbit.Pages.MainSubPages.NoPerAccPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        MinWidth="594" MinHeight="760"
        Width="594" Height="760"
        FontFamily="{StaticResource FontMain}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Page.Background>
        <ImageBrush ImageSource="/Resources/StartPage.jpeg" Stretch="Fill"/>
    </Page.Background>
    <Grid Width="auto" Height="auto">
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Center" SnapsToDevicePixels="True" CornerRadius="4" Width="auto" Height="auto" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Margin="5" HorizontalAlignment="Left" Content="{Binding FI}" ContentStringFormat="Добро пожаловать,&#x0a;{0}!"/>
                <Label Grid.Row="1" Margin="5" Content="Начните работу с сервисом добавлением лицевого счета" FontSize="10"/>
                <Button x:Name="BtnAddPerAcc" Grid.Row="2" Margin="5" Content="ДОБАВИТЬ ЛИЦЕВОЙ СЧЕТ" FontSize="10" Foreground="White" Click="BtnAddPerAcc_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
